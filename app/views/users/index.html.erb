<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback:"/assets/l_e_others_500.png" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

            <% if @user.id == current_user.id %>
            <p><%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></p>
            <% end %>


              <h2 class="mt-3">New book</h2>
              <%= form_with model:@book, url: books_path, local:true do |f| %>

                <div class="form-group">
                  <label for="book title">Title</label>
                  <input class="form-control book_title" type="text" name="book[title]" id="book_title">
                </div>
                <div class="form-group">
                  <label for="book_opinion">Opinion</label>
                  <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
                </div>
                <div class="form-group">
                  <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
                </div>
                </div>

                  <% end %>

                  <div class="col-md-8 offset-md-1">
                    <h1>Users</h1>
                    <table class="table table-hover table-inverse">

                      <thead>
                    <tr>
                    <th>image</th>
                    <th>name</th>
                    <th></th>
                    <th colspan="3"></th>
                    </tr>
                    </thead>
                  <tbody>
                    <% @users.each do |user| %>
                    <tr>
                      <td>
                      <a href="user_psth(user.id)">
                        <img class="attachment user profile_image fallback" src="/assets/l_e_others_500.png">
                        </a>
                        </td>
                      <td><%= user.name %></td>
                      <td><%= link_to "Show", user_path(user.id) %></td>
                      </tr>
                    <% end %>
                    </tbody>
                    </table>
                    </div>
</main>