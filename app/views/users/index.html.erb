<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image,format: 'jpeg', fallback:"l_e_others_500.png", size: "100x100" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

            <% if @user.id == current_user.id %>
            <p><%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></p>
            <% end %>

            <% if @book.errors.any? %>
                <%= @book.errors.count %>error prohibited this obj from being saved
                <% @book.errors.full_messages.each do |message| %>
                <%= message %>
                <% end %>
              <% end %>


              <h2 class="mt-3">New book</h2>
              <%= form_with model:@book, url: books_path, local:true do |f| %>

                <div class="form-group">
                  <p>Title</p>
                  <%= f.text_field :title,class:"form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <p>Opinion</p>
                  <%= f.text_area :body,class:"form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <%= f.submit "Create Book",class:"btn btn-success" %>
                </div>
                </div>

                  <% end %>

                  <div class="col-md-8 offset-md-1">
                    <h1>Users</h1>
                    <table class="table table-hover table-inverse">

                      <thead>
                    <tr>
                    <th>image</th>
                    <th>name</th>
                    <th></th>
                    <th colspan="3"></th>
                    </tr>
                    </thead>
                  <tbody>
                    <% @users.each do |user| %>
                    <tr>
                      <td>

                      <%= attachment_image_tag user, :profile_image, fallback: "l_e_others_500.png",size: "60x60" %>

                      </td>
                      <td><%= user.name %></td>
                      <td><%= link_to "Show", user_path(user.id) %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
</main>