<body>
<header>
  <nav class="navbar navbar-expand-lg navber-dark bg-dark">
    <div class="container">
      <a class="navber-brand" >
        <span>Bookers</span>
        </a>
        <button class="navber-toggler" type="button" data-toggle="collapse">
          </button>
          <div class="collapse navber-collapse" id="navberNavDropdown">
            <ul class="navber-nav ml-auto">
              <li></li>
              <li></li>
              <li></li>
              <li></li>
            </ul>
          </div>
        </div>
      </nav>
</header>
<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback:"/assets/l_e_others_500.png" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
          <div class="row">
            <% if @user.id == current_user.id %>
            <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
            <% end %>

              </div>
              <h2 class="mt-3">New book</h2>
                <%= form_with model:@book, url: books_path, local:true do |f| %>
                <div>
                  <h6>Title</h6>
                </div>
                <div>
                  <%= f.text_field :title %>
                  </div>
                  <div>
                    <h6>Opinion</h6>
                  </div>
                  <div>
                    <%= f.text_area :body %>
                  </div>
                  <div>
                    <%= f.submit 'Create Book' %>
                  </div>
                  <% end %>
                  <div class="col-md-8 offset-md-1">
                    <h2>Books</h2>
                    <hr>
                    <table class="table table-hover table-inverse"></table>
                    <tr>
                    <th>Title</th>
                    <th>Opinion</th>
                    </tr>
                    <hr>
                    <% @books.each do |book| %>
                    <tr>
                      <th><%= link_to book.title, book_path(book.id) %></th>
                      <th><%= link_to book.body, book_path(book.id) %></th>
                    </tr>
                    <% end %>

                  </div>
              </div>
              </div>
              </div>
</main>
</body>
