<body>

<main>
<p id="notice"><%= notice %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <div>

        </div>
        <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "l_e_others_500.png", size: "100x100" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>


            <p><%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></p>




              <h2 class="mt-3">New book</h2>



              <%= form_with model:@book, url: books_path, local:true do |f| %>

                <div class="form-group">
                  <p>Title</p>
                  <%= f.text_field :title, class:"form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <p>Opinion</p>
                  <%= f.text_area :body, class:"form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <%= f.submit "Create Book",class:"btn btn-success" %>
                </div>
                </div>
                <% end %>






                  <div class="col-md-8 offset-md-1">
                    <h2>Books</h2>
                    <table class="table table-hover table-inverse">
                    <thead>
                    <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>

                    <th colspan="3"></th>
                    </tr>
                    </thead>
                  <tbody>
                    <% @books.each do |book| %>
                    <tr>
                      <td>
                        <%= link_to user_path(@user.id) do %>
                        <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "l_e_others_500.png", size: "60x60" %>
                        <% end %>


                        </td>
                      <td><%= link_to  book_path(book.id) do %>
                      <%= book.title %>
                      <% end %>
                      </td>
                      <td><%= book.body %></td>
                      </tr>
                    <% end %>
                    </tbody>
                    </table>

                  </div>

              </div>
              </div>
</main>
</body>
