<body>
  <main>
    <p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <%= attachment_image_tag @book.user, :profile_image,format: 'jpeg', fallback:"l_e_others_500.png",size:"100x100" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>


            <p><%= link_to "", edit_user_path(@book.user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></p>



              <h2 class="mt-3">New book</h2>
              <%= form_with model:@book_new, url: books_path, local:true do |f| %>


                <div class="form-group">
                  <p>Title</p>
                  <%= f.text_field :title,class:"form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <p>Opinion</p>
                  <%= f.text_area :body,class:"form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <%= f.submit "Create Book",class:"btn btn-success" %>
                </div>
                </div>

                  <% end %>

                    <div class="col-md-8 offset-md-1">
                    <h2>Book detail</h2>
                    <table class="table table-hover table-inverse">
                    <tr>

                      <th><%= link_to user_path(@book.user.id) do %>
                        <%= attachment_image_tag @book.user, :profile_image,fallback: "l_e_others_500.png",size: "60x60" %>
                        <% end %>
                        <div>
                        <%= link_to @book.user.name, user_path(@book.user.id) %>
                        </div>
                      <th><%= link_to @book.title, book_path(@book) %></th>
                      <th><%= @book.body %></th>
                      <% if @book.user == current_user %>


                      <th><%= link_to "Edit", edit_book_path(@book.id), class:'btn btn-success' %></th>
                      <th><%= link_to "Destroy", book_path(@book.id), method: :delete, class: 'btn btn-danger' %></th>
                      <% end %>

                    </tr>
                    </table>
                    </main>
                    </body>