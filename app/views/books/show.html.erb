<body>
  <main>
<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <p id="notice"><%= notice %></p>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback:"/assets/l_e_others_500.png" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>


            <p><%= link_to "", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></p>



              <h2 class="mt-3">New book</h2>
              <%= form_with model:@book_new, url: books_path, local:true do |f| %>


                <div class="form-group">
                  <label for="book title">Title</label>
                  <%= f.text_field :title,class:"form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <label for="book_opinion">Opinion</label>
                  <%= f.text_area :body,class:"form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <%= f.submit "Create book",class:"btn btn-success" %>
                </div>
                </div>

                  <% end %>

                    <div class="col-md-8 offset-md-1">
                    <h2>Book ditail</h2>
                    <table class="table table-hover table-inverse">
                    <tr>

                      <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "/l_e_others_500" %></th>
                      <th><%= link_to @book.title, book_path(@book) %></th>
                      <th><%= @book.body %></th>
                      <% if @book.user == current_user %>


                      <th><%= link_to "Edit", edit_book_path(@book.id), class:'btn btn-success' %></th>
                      <th><%= link_to "Destroy", book_path(@book.id), method: :delete, class: 'btn btn-danger' %></th>
                      <% end %>

                    </tr>
                    </table>
                    </main>
                    </body>