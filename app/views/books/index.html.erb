<h2>Book detail</h2>
<div class="col-md-8 offset-md-1">

                    <hr>
                    <table class="table table-hover table-inverse"></table>
                    <% @books.each do |book| %>
                    <tr>
                    <th>Title</th>
                    <th>Opinion</th>
                    </tr>
                    <hr>
                    <tr>
                      <th><%= link_to book.title book_path(book.id) %></th>
                      <th><%= link_to book.body book_path(book.id) %></th>
                      <% if @book.user == current_user %>
                      <%= link_to "Destroy", book_path(@book), method: :delete %>
                      <% end >
                    </tr>
                    <% end %>