<main>

  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <P id="notice"><%= notice %></p>


        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback:"/assets/l_e_others_500.png" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>


            <p><%= link_to "", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></p>



              <h2 class="mt-3">New book</h2>
              <%= form_with model:@book, url: books_path, local:true do |f| %>

                <div class="form-group">
                  <label for="book title">Title</label>
                  <%= f.text_field :title,class:"form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <label for="book_opinion">Opinion</label>
                  <%= f.text_area :body,class:"form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <%= f.submit "Create book",class:"btn btn-success" %>
                </div>
                </div>

                  <% end %>

                  <div class="col-md-8 offset-md-1">
                    <h1>Books</h1>
                    <table class="table table-hover table-inverse">

                      <thead>
                    <tr>
                      <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                    </tr>
                    </thead>
                  <tbody>
                    <% @books.each do |book| %>
                    <tr>
                      <td>
                      <a href="user_psth(user.id)">
                        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "/assets/l_e_others_500.png" %>
                        </a>
                        </td>
                      <td><%= link_to book.title, book_path(book.id) %></td>
                      <td><%= book.body %></td>
                      </tr>
                    <% end %>
                    </tbody>
                    </table>
                    </div>
                    </main>
